<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Background"
    tools:context="com.example.theo1.nutripocket.CreateProfile2Activity">


    <com.example.theo1.nutripocket.customviews.NoDefaultSpinnerAL
        android:id="@+id/activityLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="90dp"
        android:entries="@array/activitySpinner"
        android:layout_above="@+id/textView3"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:id="@+id/CP2top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="41dp"
        android:gravity="center"
        android:orientation="horizontal">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/CP2Info"
        android:layout_marginTop="27dp"
        android:gravity="center"
        android:orientation="horizontal">


    </LinearLayout>

    <Button
        android:id="@+id/CP2Continue"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/CP2Button"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_marginTop="80dp"
        android:layout_below="@+id/goal"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/CP2Info"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/activityLevel"
        android:layout_alignTop="@+id/activityLevel"
        android:layout_toEndOf="@+id/activityLevel"
        android:background="@android:drawable/ic_menu_help" />

    <com.example.theo1.nutripocket.customviews.NoDefaultSpinnerGL
        android:id="@+id/goal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:entries="@array/goalSpinner"
        android:spinnerMode="dropdown" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/CP2Info"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="@string/activityLevel"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="32sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/goal"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="32sp"
        android:textStyle="italic" />


</RelativeLayout>

